@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Usuario";
}



<section class="content-header">
    <h1>Usuario</h1>
</section>
<section class="content">

    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">&nbsp;</h3>

                    <div class="box-tools pull-right">
                        @if (User.Identity.GetUserId().Equals("1"))
                        {
                            <button class="btn btn-success btn-sm-max" id="btnNuevoUsuario"><span class="fa fa-plus-square"></span> Nuevo Usuario</button>
                        }

                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>

                <br />
                <div class="row">
                    <div class="col-sm-1">
                    </div>
                    <div class="col-sm-10">
                        <div class="table-responsive">
                            <table id="tblListadoUsuarios" class="table table-bordered table-striped table-hover table-condensed" style="width:100%;">
                                <thead>
                                    <tr>
                                        <th width="12%;">Usuario</th>
                                        <th width="10%;">Tipo</th>
                                        <th width="10%;">Estado</th>
                                        <th width="8%;"></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

</section>


<div class="modal fade" id="modalUsuario" tabindex="-1" role="dialog" aria-labelledby="titleModal" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" aria-label="Close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="titleModalUsuario">Agregar Usuario</h4>
            </div>
            <div class="modal-body">
                <form id="formModal" class="small" onkeypress="return event.keyCode != 13;">
                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-md-10">
                            <div class="form-group">
                                <label for="txtModalUsuario">Usuario</label>
                                <input class="form-control input-sm" type="text" id="txtModalUsuario" maxlength="255" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-md-10">
                            <div class="form-group">
                                <label for="txtModalClave">Contraseña</label>
                                <input class="form-control input-sm" type="password" id="txtModalClave" maxlength="255" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="form-group col-md-10">
                            <label for="cboModalTipo">Tipo</label>
                            <select class="form-control input-sm" id="cboModalTipo">
                                <option value="0" selected>Todos</option>
                                <option value="1">Administrador</option>
                                <option value="2">Usuario</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="form-group col-md-10">
                            <label for="cboModalEstado">Estado</label>
                            <select class="form-control input-sm" id="cboModalEstado">
                                <option value="0" selected>Todos</option>
                                <option value="1">Activo</option>
                                <option value="2">Inactivo</option>
                            </select>
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger btn-sm" type="button" id="btnGuardar">Guardar</button>
                <button class="btn btn-default btn-sm" type="button" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/Content/js/Usuario/usuario.js"></script>
}